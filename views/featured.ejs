<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lyric Loop | Featured</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
  <style>
    /* General Styles */
    body {
      margin: 0;
      font-family: 'Poppins', sans-serif;
      background-color: #121212;
      color: #EAEAEA;
    }

    a {
      text-decoration: none;
      color: inherit;
    }

    a:hover {
      color: #FF5722;
    }

    /* Header Styling */
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px 40px;
      background-color: #1E1E1E;
      border-bottom: 1px solid #333;
    }

    .logo h1 {
      font-size: 24px;
      color: #FF5722;
    }

    .nav {
      display: flex;
      gap: 20px;
    }

    .nav-item {
      padding: 10px 20px;
      font-size: 16px;
      border-radius: 5px;
      transition: all 0.3s ease;
    }

    .nav-item.active {
      background-color: #FF5722;
      color: #FFFFFF;
    }

    .nav-item:hover {
      background-color: #E64A19;
      color: #FFFFFF;
    }

    .logout-button {
      font-size: 16px;
      padding: 10px 15px;
      border: 1px solid #FF5722;
      border-radius: 5px;
      transition: all 0.3s ease;
    }

    .logout-button:hover {
      background-color: #FF5722;
      color: #FFFFFF;
    }

    /* Main Content */
    .main-content {
      padding: 40px;
      text-align: center;
    }

    .section-title {
      font-size: 28px;
      margin-bottom: 20px;
      color: #FFFFFF;
      text-transform: uppercase;
    }

    .featured-list {
      list-style: none;
      padding: 0;
      margin: 0 auto;
      max-width: 800px;
      text-align: left;
    }

    .featured-item {
      display: flex;
      align-items: center;
      margin: 20px 0;
      background-color: #1E1E1E;
      border-radius: 8px;
      padding: 20px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .featured-item:hover {
      background-color: #FF5722;
      color: #FFFFFF;
      transform: scale(1.02);
    }

    .featured-image {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      object-fit: cover;
      margin-right: 20px;
      border: 2px solid #FF5722;
    }

    .info {
      flex: 1;
    }

    .name {
      font-size: 18px;
      font-weight: 600;
      margin: 0;
    }

    .details {
      font-size: 14px;
      margin: 5px 0;
      color: #BBBBBB;
    }

    .footer {
      text-align: center;
      padding: 20px;
      background-color: #1E1E1E;
      color: #777;
      margin-top: 40px;
    }
  </style>
</head>
<body>
  <header class="header">
    <div class="logo">
      <h1>Lyric Loop</h1>
    </div>
    <nav class="nav">
      <a href="/featured" class="nav-item active">Featured</a>
      <a href="/charts" class="nav-item">Charts</a>
      <a href="/search" class="nav-item">Search</a>
    </nav>
    <div class="logout">
      <a href="/login" class="logout-button">Log out</a>
    </div>
  </header>

  <main class="main-content">
    <h2 class="section-title">Featured Artists & Albums</h2>
    <ul class="featured-list">
      <% featuredData.forEach((item) => { %>
        <li class="featured-item">
          <img src="<%= item.image %>" alt="<%= item.name %>" class="featured-image">
          <div class="info">
            <h3 class="name"><%= item.name %></h3>
            <p class="details"><%= item.details %></p>
          </div>
        </li>
      <% }); %>
    </ul>
  </main>

  <footer class="footer">
    <p>Â© 2024 Lyric Loop. All rights reserved.</p>
  </footer>
</body>
</html>
