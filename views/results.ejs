<!DOCTYPE html>
<html lang="en-IE">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!-- TODO Add the search query to this? e.g. "Results for 'kendrick lamar'" -->
        <title>Search Results | Lyric Loop</title>

        <link rel="stylesheet" href="/css/main.css" type="text/css">
    </head>

    <body>
        <%- include("partials/header.html") -%>

        <main>
            <!-- TODO Add the search query to this? -->
            <h1 class="section-title">Search Results</h1>

            <% if (results.length === 0) { %>
                <p>No results found for your search. Try a different query.</p>
            <% } else { %>
                <ul class="results-list">
                    <% results.forEach(result => { %>
                        <li class="result-item">
                            <hr>

                            <h3>"<%= result.track || "Unknown Track" %>" by <%= result.artist || "Unknown Artist" %></h3>

                            <% if (result.youtubeVideo) { %>
                                <iframe
                                    width="560"
                                    height="315"
                                    src="<%= result.youtubeVideo %>"
                                    frameborder="0"
                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                    allowfullscreen
                                ></iframe>
                            <% } else { %>
                                <p>Music video not available.</p>
                            <% } %>

                            <h3>Lyrics</h3>
                            <div class="lyrics">
                                <%= result.lyrics || "Lyrics not found for this song." %>
                            </div>

                            <div class="artist-details">
                                <h3><%= result.artistInfo?.name || "N/A" %></h3>

                                <% if (result.artistInfo?.image) { %>
                                    <img src="<%= result.artistInfo.image %>" alt="Image of <%= result.artistInfo.name %>" class="artist-image" loading="lazy">
                                <% } %>

                                <h3>Biography</h3>
                                <p><%= result.artistInfo?.bio || "Biography not available." %></p>

                                <h3>Similar Artists</h3>
                                <p><%= result.artistInfo?.similarArtists || "No similar artists found." %></p>
                            </div>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>

        <%- include("partials/footer.html") -%>
    </body>
</html>
