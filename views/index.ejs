<!DOCTYPE html>
<html lang="en-IE">
    <head>
        <%- include("partials/metadata.html") -%>

        <title>Featured Artists | Lyric Loop</title>
    </head>

    <body>
        <%- include("partials/header.html") -%>

        <main>
            <h1 class="section-title">Featured Artists</h1>

            <ul class="featured-list">
                <% featuredData.forEach((item) => { %>
                    <li class="featured-item">
                        <img
                            src="<%= item.image %>"
                            alt="Image of <%= item.name %>"
                            class="featured-image"
                            loading="lazy"
                        >

                        <div class="info">
                            <h3 class="name">
                                <% if (item.name) { %>
                                    <a href="/artist/<%= item.name.toLowerCase().replace(/\s+/g, '-') %>"><%= item.name %></a>
                                <% } else { %>
                                    (Unknown Artist)
                                <% } %>
                            </h3>
                            <p class="details"><%= item.details %></p>
                        </div>
                    </li>
                <% }); %>
            </ul>
        </main>

        <%- include("partials/footer.html") -%>
    </body>
</html>
